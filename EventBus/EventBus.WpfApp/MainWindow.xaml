<Window x:Class="EventBus.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnAlloc" Click="btnAlloc_Click_1">Alloc</Button>
        <Button Grid.Row="1" x:Name="btnFire" Click="btnFire_Click_1">Wire message</Button>
        <Button Grid.Row="2" x:Name="btnFree" Click="btnFree_Click_1">Free</Button>
        <TextBox AcceptsReturn="True" AcceptsTab="True" Grid.Row="3" />
    </Grid>
</Window>
